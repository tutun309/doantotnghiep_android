<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@color/white">
    <TextView
        android:id="@+id/txt_title"
        android:text="Cập nhật thành viên"
        android:textAllCaps="true"
        android:textStyle="bold"
        android:textSize="30dp"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/rubik_medium"
        android:shadowColor="@color/black"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="2"
        android:textColor="@color/mycolor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <ImageView
        android:id="@+id/img_avatar"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:scaleType="centerCrop"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"/>
    <Button
        android:id="@+id/btn_them_anh"
        android:layout_width="wrap_content"
        android:layout_marginBottom="15dp"
        android:paddingHorizontal="15dp"
        android:layout_height="30dp"
        android:text="Chọn ảnh"
        android:background="@color/btn_color"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textAllCaps="false"
        android:fontFamily="@font/roboto"
        android:drawableLeft="@drawable/ic_baseline_add_24"
        android:drawablePadding="10dp"/>
    <EditText
        android:id="@+id/txt_email"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="15dp"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/custom_edit_text"
        android:textColorHint="#878686"
        android:textColor="@color/color_gray"
        android:hint="@string/edt_email"
        android:textSize="20sp"
        android:fontFamily="@font/roboto_bold"
        android:enabled="false" />


    <EditText
        android:id="@+id/edt_name"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="15dp"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/custom_edit_text"
        android:textColorHint="#878686"
        android:textColor="@color/black"
        android:hint="Tên"
        android:textSize="20sp"
        android:fontFamily="@font/roboto_bold"/>

    <EditText
        android:id="@+id/edt_address"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="15dp"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/custom_edit_text"
        android:textColorHint="#878686"
        android:textColor="@color/black"
        android:hint="Địa chỉ"
        android:textSize="20sp"
        android:fontFamily="@font/roboto_bold"/>
    <LinearLayout
        android:id="@+id/group_layout_role"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:orientation="horizontal"
        android:layout_gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:fontFamily="@font/roboto_bold"
            android:paddingHorizontal="10dp"
            android:text="Vai trò: "
            android:textColor="@color/mycolor"
            android:textSize="20dp"
            android:textStyle="bold"
            android:gravity="center_vertical"/>

        <RadioGroup
            android:id="@+id/radio_group_role"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/radio_admin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Admin"
                android:textColor="@color/black"
                android:buttonTint="@color/mycolor"
                android:textSize="16dp"/>

            <RadioButton
                android:id="@+id/radio_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="User"
                android:textColor="@color/black"
                android:buttonTint="@color/mycolor"
                android:textSize="16dp"/>
        </RadioGroup>
    </LinearLayout>

    <Button
        android:id="@+id/btn_update"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="20dp"
        android:background="@drawable/custom_button"
        android:fontFamily="@font/roboto_bold"
        android:text="lưu"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btn_delete"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/custom_button_cancel"
        android:fontFamily="@font/roboto_bold"
        android:text="Xóa"
        android:textColor="@color/white"
        android:textSize="20sp" />

</LinearLayout>