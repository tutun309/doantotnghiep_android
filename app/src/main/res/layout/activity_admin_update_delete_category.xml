<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@color/white">
    <TextView
        android:id="@+id/icon_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:drawableStart="@drawable/ic_baseline_arrow_back_40"
        android:drawableTint="@color/mycolor" />
    <TextView
        android:text="Sửa danh mục"
        android:textAllCaps="true"
        android:textStyle="bold"
        android:textSize="30dp"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/rubik_medium"
        android:shadowColor="@color/black"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="2"
        android:textColor="@color/mycolor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <ImageView
        android:id="@+id/img_avatar"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:scaleType="centerCrop"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"/>

    <Button
        android:id="@+id/btn_them_anh"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginBottom="15dp"
        android:background="@color/btn_color"
        android:drawableLeft="@drawable/ic_baseline_add_24"
        android:drawablePadding="10dp"
        android:fontFamily="@font/roboto"
        android:paddingHorizontal="15dp"
        android:text="Chọn ảnh"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="20sp" />
    <EditText
        android:id="@+id/txt_name"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="15dp"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/custom_edit_text"
        android:textColorHint="#878686"
        android:textColor="@color/black"
        android:hint="Nhập tên danh mục"
        android:textSize="20sp"
        android:fontFamily="@font/roboto_bold"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <Button
            android:id="@+id/btn_update"
            android:layout_marginVertical="15dp"
            android:layout_marginHorizontal="5dp"
            android:layout_width="match_parent"
            android:layout_marginTop="25dp"
            android:layout_height="50dp"
            android:text="Lưu"
            android:background="@drawable/custom_button"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:fontFamily="@font/roboto_bold" />
        <Button
            android:id="@+id/btn_delete"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginHorizontal="5dp"
            android:text="Xoa"
            android:background="@drawable/custom_button_cancel"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:fontFamily="@font/roboto_bold"/>

    </LinearLayout>


</LinearLayout>